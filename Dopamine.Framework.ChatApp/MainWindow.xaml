<Window x:Class="Dopamine.ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:Dopamine.ChatApp" 
		mc:Ignorable="d"
		FontFamily="YouYuan"
		FontSize="12"
		WindowStyle="None"
		ResizeMode="CanResize"
		 AllowsTransparency="True"
		 WindowStartupLocation="CenterScreen"
		Background="Transparent"
		MouseLeftButtonDown="OnMouseLeftButtonDown"
        Title="聊天工具" Height="auto" Width="auto">
	<Grid x:Name="MainBorderGrid">
		<Border x:Name="MainBorder" 
				BorderBrush="Transparent"
				BorderThickness="5"
				Width="auto"
				Height="auto"
				CornerRadius="5"
				Margin="5"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Background="LightBlue">
			<Grid x:Name="MainInnerGrid"
				  HorizontalAlignment="Center"
				  VerticalAlignment="Center"
				  Margin="2"
				  >
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="auto	"/>
				</Grid.RowDefinitions>
				<ScrollViewer  Margin="1"
							   Grid.Row="0"
							   VerticalAlignment="Center"
							   HorizontalAlignment="Center"
							   HorizontalContentAlignment="Center"
							   VerticalContentAlignment="Center"
							   VerticalScrollBarVisibility="Visible"
							   Height="auto"
							   >
					<TextBox x:Name="TestLabel"
					   Text="{Binding AIChatBoxText}" 
					   HorizontalContentAlignment="Center"
					   VerticalContentAlignment="Center"
					   MinHeight="200" 
					   MinWidth="500"
					   Foreground="Black"
					   Background="White" Margin="1,1,1,1"
					   />
				</ScrollViewer>
				<Button x:Name="SendButton"
						Margin="0,10,0,10"
						Grid.Row="1"
						Content="发送"
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center"
						MinHeight="80"
						MinWidth="200"
						FontSize="20"
						VerticalAlignment="Center" 
						Cursor="AppStarting" 
						FontWeight="Bold" 
						HorizontalAlignment="Center" 
						Background="{x:Null}"
						ClipToBounds="True" 
						CommandParameter="Send"
						Command="{Binding LocalCommand}">
					<Button.Foreground>
						<RadialGradientBrush>
							<GradientStop Color="Black" Offset="1"/>
							<GradientStop Color="#FF3189BB" Offset="0"/>
						</RadialGradientBrush>
					</Button.Foreground>
					<Button.BorderBrush>
						<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
							<GradientStop Color="Black"/>
							<GradientStop Color="#FFF64747" Offset="1"/>
						</LinearGradientBrush>
					</Button.BorderBrush>
				</Button>
			</Grid>
		</Border>
	</Grid>
</Window>
